<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navHome">

    <fragment
        android:id="@+id/navHome"
        android:name="dev.android.project.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/navProductView"/>
    </fragment>

    <fragment
        android:id="@+id/navCreateListing"
        android:name="dev.android.project.ui.createListing.CreateListingFragment"
        android:label="@string/menu_create_listing"
        tools:layout="@layout/fragment_create_listing"/>

    <fragment
        android:id="@+id/navProfile"
        android:name="dev.android.project.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/navSettings"
        android:name="dev.android.project.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings"/>


    <activity
        android:id="@+id/navLogin"
        android:name="dev.android.project.ui.login.LoginActivity"
        android:label="@string/menu_login"/>


    <fragment
        android:id="@+id/navProductView"
        android:name="dev.android.project.ui.product.ProductFragment"
        tools:layout="@layout/fragment_product">
        <argument
            android:name="productID"
            app:argType="string"/>
    </fragment>


</navigation>